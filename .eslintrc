{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "new-cap": [0],
    "no-console": [0],
    "no-unused-vars": [1],
    "no-await-in-loop": [1],
    "no-prototype-builtins": [1],
    "no-template-curly-in-string": [1],
    "array-callback-return": [1],
    "block-scoped-var": [1],
    "complexity": [1],
    "consistent-return": [1],
    "default-case": [1],
    "eqeqeq": [1],
    "no-param-reassign": [1],
    "no-return-await": [1],
    "no-sequences": [1],
    "no-throw-literal": [1],
    "no-unused-expressions": [
      1,
      { "allowShortCircuit": true, "allowTernary": true }
    ],
    "no-useless-return": [1],
    "no-warning-comments": [1],
    "require-await": [1],
    "strict": [1, "global"],
    "react/jsx-no-undef": [1],
    "react/jsx-uses-react": [1],
    "react/jsx-uses-vars": [1]
  }
}
